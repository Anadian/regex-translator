{
  "name": "regex-translator",
  "version": "0.2.3",
  "description": "Convert a Regular Expression from one flavour to another.",
  "main": "source/main.js",
  "scripts": {
    "test": "ava -v ./source/main.test.js && ./cli_test.sh",
    "lint": "eslint ./source/main.js",
    "generate-docs": "extract-documentation-comments -I source/main.js -O API.md",
    "update-travis-config": "json2yaml --preserve-key-order ci/travis.json .travis.yml"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Anadian/regex-translator.git"
  },
  "keywords": [
    "re",
    "regex",
    "regexp",
    "regular",
    "expressions",
    "translator",
    "converter",
    "format",
    "posix",
    "pcre",
    "vim",
    "re2",
    "ecma",
    "javascript",
    "grep",
    "egrep",
    "tool",
    "cli",
    "command",
    "line",
    "free",
    "libre",
    "open",
    "mit"
  ],
  "author": "Anadian",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Anadian/regex-translator/issues"
  },
  "homepage": "https://github.com/Anadian/regex-translator#readme",
  "devDependencies": {
    "ava": "^3.8.2",
    "coveralls": "^3.1.0",
    "eslint": "^7.1.0",
    "extract-documentation-comments": "^0.1.2",
    "nyc": "^15.0.1",
    "pify": "^5.0.0",
    "standard-version": "^8.0.0"
  },
  "dependencies": {
    "application-log-winston-interface": "^1.0.5",
    "clipboardy": "^2.3.0",
    "command-line-args": "^5.1.1",
    "command-line-usage": "^6.1.0",
    "env-paths": "^2.2.0",
    "get-stream": "^5.1.0",
    "make-dir": "^3.1.0"
  },
  "bin": {
    "regex-translator": "./source/main.js"
  },
  "eslintConfig": {
    "env": {
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": 11
    },
    "rules": {
      "no-unused-vars": [
        "warn"
      ],
      "no-useless-escape": "off",
      "no-empty": "warn"
    }
  },
  "standard-version": {
    "types": [
      {
        "type": "feat",
        "section": "Features",
        "hidden": false
      },
      {
        "type": "fix",
        "section": "Bug Fixes",
        "hidden": false
      },
      {
        "type": "chore",
        "section": "Chores",
        "hidden": false
      },
      {
        "type": "docs",
        "section": "Documentation",
        "hidden": false
      },
      {
        "type": "style",
        "section": "Code Style",
        "hidden": false
      },
      {
        "type": "refactor",
        "section": "Refactoring",
        "hidden": false
      },
      {
        "type": "perf",
        "section": "Performance",
        "hidden": false
      },
      {
        "type": "test",
        "section": "Tests",
        "hidden": false
      }
    ]
  }
}
